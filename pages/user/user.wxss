/* pages/user/user.wxss */
page {
  height: 100%;
  background-color: #eee;
}
.wrapper {
  width: 100%;
  height: 100%;
  /* padding: 25rpx; */
}
.personHead {
  width: 750rpx;
  height: 400rpx;
  background-color: #d81e06;
  display: flex;
  justify-content: center;
  align-items: center;
  /* border: 1px solid #eee; */
  /* box-shadow: 1px 1px 1px #eee; */
  position: relative;
}
.headIcon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background-color: skyblue;
  overflow: hidden;
  border: 2px solid #fff;
}
.headIcon image {
  width: 100%;
  height: 100%;
}
.personContent {
  width: 750rpx;
  /* padding: 25rpx; */
  
}
.itemCustom {
  border: 2rpx solid #eee;
  border-radius: 6rpx;
  /* box-shadow: 1px 1px 5px rgba(0, 0, 0, 0.15); */
}
.contentItem {
  line-height: 70rpx;
  display: flex;
  padding: 10rpx;
  border-bottom: 2rpx solid #eee;
  background-color:#fff; 
}
.contentItem:last-child {
  border-bottom: none;
}
.contentItem .itemLabel {
  flex: 2;
  text-align: center;
}
.contentItem .itemDetail {
  flex: 5;
}